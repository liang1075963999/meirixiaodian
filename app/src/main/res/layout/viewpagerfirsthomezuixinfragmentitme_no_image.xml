<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp360"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp105"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp30" >

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp30"
            android:singleLine="true"
            android:paddingRight="@dimen/dp40"
            android:text="高冷笑段，适合夏天欣赏"
            android:textColor="@color/grayDark"
            android:textSize="16sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/dianzan_image"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:src="@drawable/huisedianzan" />

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_marginRight="@dimen/dp30"
            android:layout_gravity="right"
            android:id="@+id/dianzan_counts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:singleLine="true"
            android:text="52000点赞"
            android:textColor="@color/grayDark"
            android:textSize="12sp" />
        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_marginRight="@dimen/dp30"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="|"
            android:textColor="@color/grayDark"
            android:textSize="12sp" />
        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_marginRight="@dimen/dp30"
            android:layout_gravity="right"
            android:id="@+id/shoucang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="52000收藏"
            android:textColor="@color/grayDark"
            android:textSize="12sp" />
    </LinearLayout>

    <read.eyydf.terr.jokecollection.views.zitiTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp230"
        android:background="@color/white"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:lines="3"
        android:paddingBottom="@dimen/dp30"
        android:paddingLeft="@dimen/dp50"
        android:paddingRight="@dimen/dp50"
        android:paddingTop="@dimen/dp30"
        android:text="1.高冷笑段，适合夏天欣赏\n2.高冷笑段，适合夏天欣赏\n3.高冷笑段，适合夏天欣赏\n4.高冷笑段，适合夏天欣赏"
        android:textColor="@color/grayLight"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray2"/>
</LinearLayout>