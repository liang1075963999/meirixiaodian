<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <read.eyydf.terr.jokecollection.views.MyScrollview
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="12">


                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <read.eyydf.terr.jokecollection.views.zitiTextView
                            android:id="@+id/content_article_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="#ffffff"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:text="标题"
                            android:textColor="@color/grayLight"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/riqi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日期"
                                android:textColor="@color/gray"/>

                            <TextView
                                android:id="@+id/liulan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="浏览量"
                                android:textColor="@color/gray"/>
                        </LinearLayout>
                        <!-- <read.eyydf.terr.jokecollection.views.zitiTextView
                             android:id="@+id/content_content"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="20dp"
                             android:layout_marginRight="20dp"
                             android:layout_marginTop="15dp"
                             android:background="#ffffff"
                             android:lineSpacingExtra="3dp"
                             android:lineSpacingMultiplier="1.2"
                             android:paddingBottom="20dp"
                             android:paddingLeft="10dp"
                             android:paddingRight="10dp"
                             android:paddingTop="20dp"
                             android:text="内容"
                             android:textColor="@color/grayLight"
                             android:textSize="17sp" />-->
                        <LinearLayout
                            android:id="@+id/content_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="#ffffff"
                            android:lineSpacingExtra="3dp"
                            android:lineSpacingMultiplier="1.2"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="20dp"
                            android:textColor="@color/grayLight"
                            android:textSize="17sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <LinearLayout
                                android:id="@+id/lin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/beijing"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/content_dianzan"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/huisedianzan"/>

                                <read.eyydf.terr.jokecollection.views.zitiTextView
                                    android:id="@+id/content_dianzan_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:text="5555"
                                    android:textColor="@color/grayDark"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/beijing"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp">

                                <ImageView
                                    android:id="@+id/content_shoucang"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/huisestar"/>

                                <read.eyydf.terr.jokecollection.views.zitiTextView
                                    android:id="@+id/content_shoucang_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3444"
                                    android:textColor="@color/grayDark"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/next_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:paddingRight="20dp"
                                android:text="下一条"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="50dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:visibility="gone">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6.5"
                                android:visibility="gone">

                                <read.eyydf.terr.jokecollection.views.zitiTextView
                                    android:id="@+id/next_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:singleLine="true"
                                    android:text="高冷笑段，适合夏天欣赏"
                                    android:textColor="@color/grayDark"
                                    android:textSize="18sp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_jianbian"/>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </read.eyydf.terr.jokecollection.views.MyScrollview>
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>