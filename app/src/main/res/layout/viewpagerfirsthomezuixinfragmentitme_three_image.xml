<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp455"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp105"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp30">

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp30"
            android:paddingRight="@dimen/dp40"
            android:singleLine="true"
            android:text="高冷笑段，适合夏天欣赏"
            android:textColor="@color/grayDark"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/dianzan_image"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:src="@drawable/huisedianzan"
            android:visibility="gone"/>

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/dianzan_counts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:singleLine="true"
            android:text="52000点赞"
            android:textColor="@color/grayDark"
            android:textSize="12sp"/>

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp30"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="|"
            android:textColor="@color/grayDark"
            android:textSize="12sp"/>

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/shoucang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp30"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="52000收藏"
            android:textColor="@color/grayDark"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp325"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp30">

        <ImageView
            android:id="@+id/three_image_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/type_01"/>

        <ImageView
            android:id="@+id/three_image_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/type_01"/>

        <ImageView
            android:id="@+id/three_image_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp30"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/type_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray2"/>
</LinearLayout>