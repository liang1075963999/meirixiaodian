<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/write_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray2"
    android:orientation="vertical"
    android:weightSum="9" >

    <read.eyydf.terr.jokecollection.views.UserDefineScrollView
        android:id="@+id/own_user_image_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/own_bg_xuhua"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp" >

            <LinearLayout
                android:id="@+id/own_hide_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/own_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/own_login" />

                <ImageView
                    android:id="@+id/own_regiter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="23dp"
                    android:layout_weight="1"
                    android:src="@drawable/own_register" />
            </LinearLayout>

            <ImageView
                android:id="@+id/own_user_image_baikuang"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:src="@drawable/own_baikuang"
                android:visibility="gone" />

            <read.eyydf.terr.jokecollection.views.CircleImageView
                android:id="@+id/own_user_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/own_bg_xuhua"
                android:visibility="gone" />
        </FrameLayout>
    </read.eyydf.terr.jokecollection.views.UserDefineScrollView>

    <LinearLayout
        android:id="@+id/own_hide_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:visibility="gone" >

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/own_read_histroy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/own_bg_black"
            android:gravity="center"
            android:text="阅读历史"
            android:textColor="@android:color/white" />

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/own_shoucang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/own_bg_black"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@android:color/white" />

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:id="@+id/own_replace_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/own_bg_black"
            android:gravity="center"
            android:text="更换背景图"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/own_xieyi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/own_xieyi" />

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="用户协议"
            android:textColor="@color/grayLight"
            android:textSize="@dimen/sp44" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@drawable/own_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/own_hezuo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/own_hezuo" />

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="@color/grayLight"
            android:textSize="@dimen/sp44" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@drawable/own_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/own_guanyu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.9"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/own_guanyu" />

        <read.eyydf.terr.jokecollection.views.zitiTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="关于app"
            android:textColor="@color/grayLight"
            android:textSize="@dimen/sp44" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@drawable/own_right" />
    </LinearLayout>

</LinearLayout>